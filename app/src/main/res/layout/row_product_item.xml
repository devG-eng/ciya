<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_85sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:elevation="@dimen/_10sdp"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProduct"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/places" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtProductItem"
                style="@style/txtBold_14Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProduct"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_toStartOf="@+id/ivAdd"
                android:text=""
                android:textColor="@color/txt_black"
                android:textSize="@dimen/_10sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCatItem"
                style="@style/txtRegular_14Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSizeItem"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/txt_black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSizeItem"
                style="@style/txtRegular_14Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductItem"
                android:layout_marginStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/txt_black" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProduct"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_add" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>