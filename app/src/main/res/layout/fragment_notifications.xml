<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.ui.notifications.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsMain"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/linBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="@color/appThemeColor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_18sdp"
                        style="@style/txtSemiBold_14Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account"
                        android:textColor="@color/appThemeColor"
                        android:textSize="@dimen/_18sdp" />

                    <View
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <RelativeLayout
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtUsername"
                            style="@style/txtMedium_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="@string/username"
                            android:textAlignment="center"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/usernameTv"
                            style="@style/txtRegular_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/ivUserEdit"
                            android:layout_toEndOf="@+id/txtUsername"
                            android:hint="Your Username"
                            android:inputType="text"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_11sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivUserEdit"
                            android:padding="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <RelativeLayout
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtMobile"
                            style="@style/txtMedium_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="@string/mobile"
                            android:textAlignment="center"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/mobileTv"
                            style="@style/txtRegular_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/ivMoEdit"
                            android:layout_toEndOf="@+id/txtMobile"
                            android:hint="Your Mobile No."
                            android:inputType="phone"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_11sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMoEdit"
                            android:padding="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <RelativeLayout
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtEmail"
                            style="@style/txtMedium_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="@string/email"
                            android:textAlignment="center"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/emailTv"
                            style="@style/txtRegular_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/ivEmEdit"
                            android:layout_toEndOf="@+id/txtEmail"
                            android:hint="Your Email Id"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_11sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivEmEdit"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <RelativeLayout
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtCname"
                            style="@style/txtMedium_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="@string/cname"
                            android:textAlignment="center"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/companyTv"
                            style="@style/txtRegular_14Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/ivCmEdit"
                            android:layout_toEndOf="@+id/txtCname"
                            android:hint="Your Company Name"
                            android:inputType="phone"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/_11sdp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCmEdit"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <View
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/appThemeColor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_18sdp"
                        style="@style/txtSemiBold_14Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legal"
                        android:textColor="@color/appThemeColor"
                        android:textSize="@dimen/_18sdp" />


                    <View
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:id="@+id/txtTerms"
                        style="@style/txtMedium_14Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms"
                        android:textAlignment="center"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:id="@+id/txtPolicy"
                        style="@style/txtMedium_14Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/policy"
                        android:textAlignment="center"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/appThemeColor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>



                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/border_blue_corner"
                    android:text="Logout"
                    android:textColor="@color/white" />
            </LinearLayout>



        </androidx.core.widget.NestedScrollView>


        <include
            android:id="@+id/progressBar"
            layout="@layout/custom_progress_bar"
            android:visibility="gone" />
    </RelativeLayout>

</layout>